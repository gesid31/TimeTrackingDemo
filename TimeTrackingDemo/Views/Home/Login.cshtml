@model TimeTrackingDemo.Models.User

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")
@using (Html.BeginForm("Login","Home",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="modal" id="myModal" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Login</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-lg-3" })
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-lg-3" })
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </form>
                </div>
                    <div class="modal-footer">
                        <div class="col-lg-offset-2 col-md-10">
                            <input type="submit" class="btn btn-primary btn-primary glyphicon-log-in pull-left RbtnMargin" value="Login" />
                        </div>
                    </div>
            </div>
        </div>
    </div>
}

<div>
    <p>Haven't Register yet? @Html.ActionLink("Register Now","Register", "Home")</p>
</div>
<style>
    .modal-dialog {
        max-width: 480px;
    }
    .madal-dialog {
        transform: translate(0, 50%) !important;
        -ms-transform: translate(0, 50%) !important;
        -webkit-transform: translate(0.50%) !important;
    }
    .RbtnMargin {
        margin-left: 90px;
    }
</style>

<script>
    $(document).ready(function() {
        $("#myModal").modal({
            //backdrop: 'static',
        });
    })
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
